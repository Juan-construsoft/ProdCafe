@model IEnumerable<HipatiaVentas.Domain.Dtos.RegistroCatacionDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary btn-large">Crear nuevo</a>
</p>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Lista de Registros</h5>
                @Html.Raw(@TempData["Mensaje"])
            </div>
            <div class="card-body">
                <table id="example" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width:100%">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.FechaPrueba)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Lote)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Puntaje)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.IsActive)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.FechaPrueba)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Lote)
                                </td>
                                <td>
                                    @if (item.Puntaje < 80)
                                    {
                                        <span class="badge bg-danger-subtle text-danger text-uppercase">@Html.DisplayFor(modelItem => item.Puntaje)</span>
                                    }
                                    else if (item.Puntaje < 85)
                                    {
                                        <span class="badge bg-warning-subtle text-warning text-uppercase">@Html.DisplayFor(modelItem => item.Puntaje)</span>
                                    }
                                    else if (item.Puntaje < 90)
                                    {
                                        <span class="badge bg-sucess-subtle text-sucess text-uppercase">@Html.DisplayFor(modelItem => item.Puntaje)</span>
                                    }
                                    else if (item.Puntaje < 100)
                                    {
                                        <span class="badge bg-info-subtle text-info text-uppercase">@Html.DisplayFor(modelItem => item.Puntaje)</span>
                                    }                                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.IsActive)
                                </td>
                                <td>
                                    <div class="dropdown d-inline-block">
                                        <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                            <i class="ri-more-fill align-middle"></i>
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-end">
                                            <li>
                                                <a asp-action="Details" asp-route-id="@item.Id" class="dropdown-item"><i class="ri-eye-fill align-bottom me-2 text-muted"></i>View</a>
                                            </li>
                                            <li>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="dropdown-item edit-item-btn"><i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit</a>
                                            </li>
                                            <li>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="dropdown-item remove-item-btn"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete</a>
                                            </li>
                                        </ul>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div><!--end col-->
</div><!--end row-->